<div class="p-comment_item">
  <p><%= simple_format(comment.comment) %></p>
  <div class="p-comment_bottomline">
    <span><%= comment.name %></span>
    <span><%= comment.created_at.to_s(:datetime_jp) %></span>
    <span><%= link_to '削除', comment, method: :delete, class: 'btn btn-outline-dark', data: { confirm: '削除してもよろしいですか？'}%></span>
  </div>
</div>
